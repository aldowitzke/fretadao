<div class="container">
  <% if flash[:success] %>
    <div class="alert flash flash-success"><%= flash[:success] %></div>
  <% end %>

  <div class="text-center mb-3 mt-3">
    <%= link_to("Home", root_path, class: "btn btn-flat") unless current_page?(root_path) %>
    <%= link_to new_user_path, class: "btn btn-gradient" do %>
      <i class="fab fa-twitter"></i> New twitter account
    <% end %>
  </div>

  <div class="card-product mt-3">
    <img src=<%= @user.image_url %> />
    <div class="card-product-infos">
      <p class="font-weight-bold"><%= @user.name %></p>
      <p class="font-weight-light">@<%= @user.username %></p>
      <p class="font-weight-light"><%= @user.description %></p>
      <%= link_to @user.url, @user.url, target: :blank, class: "font-weight-light" %><br>
      <%= link_to 'Edit user', edit_user_path(@user.id), class: "btn btn-flat mt-2 mb-2" %>
    </div>
  </div>
</div>